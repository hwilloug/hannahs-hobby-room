<style>
	.social-links {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1em;
	}

	.social-link {
		padding: 1em 1em;
		border-radius: 8px;
		background-color: var(--secondary-main);
		color: white;
		border: 1px solid var(--secondary-dark);
		width: 300px;
		cursor: pointer;
	}

	.social-link:hover {
		background-color: var(--secondary-dark);
	}

	.about-images {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1em;
		align-items: center;
		margin: 2em;
	}

	.about-images img {
		border-radius: 8px;
		border: 10px solid var(--secondary-dark);
	}

	.flower-divider {
		margin: 0.75em 0;
	}
</style>
