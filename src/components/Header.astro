---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import DarkModeToggle from './DarkModeToggle.astro';
import SignInButton from './SignInButton.astro';
import UserButton from './UserButton.astro';

const { userId, isAdmin } = Astro.locals;
---

<header>
	<nav>
		<div class="nav-left">
			<div class="app-icon">
				<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M12 2L3 9h18l-9-7z"/>
					<path d="M3 9v13h18V9"/>
					<path d="M9 22V12h6v10"/>
					<path d="M12 12v3"/>
					<circle cx="12" cy="7" r="1"/>
				</svg>
			</div>
			<h2 id="app-title"><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="nav-right">
			<div class="mobile-controls">
				<DarkModeToggle />
				<button class="menu-toggle" aria-label="Toggle menu">
					<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<line x1="3" y1="12" x2="21" y2="12"></line>
						<line x1="3" y1="6" x2="21" y2="6"></line>
						<line x1="3" y1="18" x2="21" y2="18"></line>
					</svg>
				</button>
			</div>
		</div>
		<div class="nav-container">
			<div class="internal-links">
				<HeaderLink href="/categories/gardening">
					<div class="nav-content">
						<span class="icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M12 2L3 9h18l-9-7z"/>
								<path d="M9 22V12h6v10"/>
								<path d="M3 9v13h18V9"/>
								<path d="M12 12v3"/>
							</svg>
						</span>
						<span class="text">Gardening</span>
					</div>
				</HeaderLink>
				<HeaderLink href="/categories/crafts">
					<div class="nav-content">
						<span class="icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<circle cx="12" cy="12" r="10"/>
								<path d="M12 2v20"/>
								<path d="M2 12h20"/>
								<path d="M12 2c4 4 8 8 8 10-2 4-6 8-8 8-2 0-6-4-8-8 0-2 4-6 8-10z"/>
							</svg>
						</span>
						<span class="text">Crafts</span>
					</div>
				</HeaderLink>
				<HeaderLink href="/categories/coding">
					<div class="nav-content">
						<span class="icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<polyline points="16 18 22 12 16 6"/>
								<polyline points="8 6 2 12 8 18"/>
							</svg>
						</span>
						<span class="text">Coding</span>
					</div>
				</HeaderLink>
				<HeaderLink href="/categories/books">
					<div class="nav-content">
						<span class="icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
								<path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
							</svg>
						</span>
						<span class="text">Books</span>
					</div>
				</HeaderLink>
				<HeaderLink href="/categories/antiquing">
					<div class="nav-content">
						<span class="icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M12 2L8 6h8l-4-4z"/>
								<path d="M6 6h12v14a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2V6z"/>
								<path d="M9 10h6"/>
								<path d="M9 14h6"/>
							</svg>
						</span>
						<span class="text">Antiquing</span>
					</div>
				</HeaderLink>
			</div>
			<div class="nav-end">
				<DarkModeToggle class="desktop-only" />
				<HeaderLink href="/about">
					<div class="nav-content">
						<span class="icon">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<circle cx="12" cy="12" r="10"/>
								<path d="M12 16v-4"/>
								<path d="M12 8h.01"/>
							</svg>
						</span>
						<span class="text">About</span>
					</div>
				</HeaderLink>
				{isAdmin && (
					<>
						<HeaderLink href="/dashboard">Dashboard</HeaderLink>
						<HeaderLink href="/manage-articles">Manage Articles</HeaderLink>
					</>
				)}
				{userId ? (
					<UserButton />
				) : (
					<SignInButton />
				)}
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		background: var(--primary-main);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}

	nav {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1em;
		color: white;
		position: relative;
	}

	.nav-left {
		display: flex;
		align-items: center;
		gap: 1em;
	}

	.app-icon {
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(255, 255, 255, 0.2);
		border-radius: 8px;
		padding: 8px;
	}

	.app-icon svg {
		width: 100%;
		height: 100%;
		stroke: white;
	}

	#app-title {
		margin: 0;
		font-size: 1.5em;
	}

	#app-title a {
		color: white;
		text-decoration: none;
	}

	.nav-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-top: 1em;
	}

	.internal-links {
		display: flex;
		gap: 1em;
	}

	.nav-content {
		display: flex;
		align-items: center;
		gap: 0.5em;
	}

	.icon {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.icon svg {
		width: 20px;
		height: 20px;
		stroke: currentColor;
	}

	.nav-end {
		display: flex;
		align-items: center;
		gap: 1em;
	}

	.mobile-controls {
		display: none;
	}

	.menu-toggle {
		background: none;
		border: none;
		color: white;
		cursor: pointer;
		padding: 0.5em;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	@media (max-width: 768px) {
		.nav-container {
			display: none;
		}

		.mobile-controls {
			display: flex;
			align-items: center;
			gap: 1em;
		}

		nav {
			display: flex;
			justify-content: space-between;
			align-items: center;
		}
	}
</style>