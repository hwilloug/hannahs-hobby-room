---
const today = new Date();

const sitemap = [
	{
		title: 'Home',
		links: [
			{ text: 'About', href: '/about' },
			{ text: 'Gardening', href: '/categories/gardening' },
			{ text: 'Crafts', href: '/categories/crafts' },
			{ text: 'Coding', href: '/categories/coding' },
			{ text: 'Books', href: '/categories/books' },
			{ text: 'Antiquing', href: '/categories/antiquing' },
		]
	}
];
---

<footer>
	<div class="footer-content">
		<div class="footer-grid">
			{sitemap.map(section => (
				<div class="footer-section">
					<h3>{section.title}</h3>
					<ul>
						{section.links.map(link => (
							<li>
								<a href={link.href}>{link.text}</a>
							</li>
						))}
					</ul>
				</div>
			))}

			<div class="footer-section">
				<h3>Connect</h3>
				<div class="social-links">
					<a href="mailto:support@hannahshobbyroom.com" target="_blank">
						<span class="sr-only">Email us</span>
						<svg
							viewBox="0 0 24 24"
							aria-hidden="true"
							width="32"
							height="32"
							stroke="currentColor"
							fill="none"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
							<polyline points="22,6 12,13 2,6"/>
						</svg>
					</a>
					<a href="https://github.com/withastro/astro" target="_blank">
						<span class="sr-only">Go to Astro's GitHub repo</span>
						<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/github"
							><path
								fill="currentColor"
								d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
							></path></svg
						>
					</a>
				</div>
			</div>
		</div>
		<div class="footer-bottom">
			<p>&copy; {today.getFullYear()} Hannah's Hobby Room. All rights reserved.</p>
		</div>
	</div>
</footer>

<style>
	footer {
		padding: 4em 1em;
		background: var(--primary-main);
		color: white;
		border-top: 1px solid var(--primary-dark);
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2em;
		margin-bottom: 3em;
	}

	.footer-section h3 {
		color: white;
		margin: 0 0 1em 0;
		font-size: 1.2em;
		text-shadow: none;
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-section ul li {
		margin-bottom: 0.5em;
	}

	.footer-section ul a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
		transition: all 0.2s;
	}

	.footer-section ul a:hover {
		color: white;
		transform: translateX(4px);
		display: inline-block;
	}

	.social-links {
		display: flex;
		gap: 1em;
	}

	.social-links a {
		text-decoration: none;
		color: rgba(255, 255, 255, 0.8);
		transition: color 0.2s ease;
	}

	.social-links a:hover {
		color: white;
	}

	.footer-bottom {
		padding-top: 2em;
		border-top: 1px solid rgba(255, 255, 255, 0.2);
		text-align: center;
	}

	.footer-bottom p {
		margin: 0;
		color: rgba(255, 255, 255, 0.8);
		font-size: 0.9em;
	}

	@media (max-width: 768px) {
		footer {
			padding: 2em 1em;
		}

		.footer-grid {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.social-links {
			justify-content: center;
		}

		.footer-section ul a:hover {
			transform: none;
		}
	}
</style>